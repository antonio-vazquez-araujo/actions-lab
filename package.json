{
  "publisher": "inditex",
  "name": "amiga-javaformat",
  "displayName": "Amiga JavaFormat",
  "description": "amiga-javaformat for vscode",
  "version": "0.0.1",
  "icon": "img/logo.png",
  "license": "SEE LICENSE IN README.md",
  "homepage": "https://github.com/microsoft/vscode-wordcount/blob/main/README.md",
  "bugs": {
    "url": "https://github.com/inditex/lib-amigajavaformat/issues",
    "email": "soportearquitecturasw@inditex.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/inditex/lib-amigajavaformat.git"
  },
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage:java"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "amiga-javaformat.use",
        "title": "Use Amiga Javaformat",
        "category": "Amiga Javaformat"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "amiga-javaformat.use" 
        }
      ]
    }
  },
  "scripts": {    
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "vscode:prepublish": "npm run package",
    "webpack": "webpack --mode development",
    "webpack-dev": "webpack --mode development --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./"    
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.79.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.4",
    "typescript": "^5.1.3",
    "webpack": "^5.88.1",
    "webpack-cli": "^5.1.4"
  }
}
